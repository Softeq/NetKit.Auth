<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    @RenderSection("Styles", required: false)

    <environment include="Local,Development">
        <link rel="stylesheet" href="~/styles/bundle.css" />
    </environment>
    <environment exclude="Local,Development">
        <link rel="stylesheet" href="~/styles/bundle.min.css" />
    </environment>
</head>
<body>
    @RenderBody()

    <environment include="Local,Development">
        <script src="~/scripts/bundle-jquery.js"></script>
    </environment>
    <environment exclude="Local,Development">
        <script src="~/scripts/bundle-jquery.min.js"></script>
    </environment>
    @RenderSection("Scripts", required: false)
</body>
</html>